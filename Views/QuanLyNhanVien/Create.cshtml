@model bike.Models.User
@{
    ViewData["Title"] = "Thêm Nhân Viên Mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
    }

    .form-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    .form-header {
        background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
        color: white;
        padding: 20px 30px;
    }

    .form-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 12px 15px;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #27ae60;
        box-shadow: 0 0 0 0.2rem rgba(39, 174, 96, 0.25);
    }

    .btn-custom {
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        border-left: 4px solid #27ae60;
    }

    .required {
        color: #e74c3c;
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="bi bi-person-plus"></i> Thêm Nhân Viên Mới</h1>
                <p class="mb-0">Nhập thông tin đầy đủ để tạo tài khoản nhân viên</p>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-card">
                <div class="form-header">
                    <h5 class="mb-0">
                        <i class="bi bi-form"></i> Thông tin nhân viên
                    </h5>
                </div>
                <div class="form-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>

                        <!-- Thông tin cá nhân -->
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-person"></i> Thông tin cá nhân
                        </h6>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ten" class="form-label">
                                        Họ và tên <span class="required">*</span>
                                    </label>
                                    <input asp-for="Ten" class="form-control" placeholder="Nhập họ và tên đầy đủ" required>
                                    <span asp-validation-for="Ten" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SoDienThoai" class="form-label">
                                        Số điện thoại
                                    </label>
                                    <input asp-for="SoDienThoai" class="form-control" placeholder="0123456789">
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                            <textarea asp-for="DiaChi" class="form-control" rows="2" placeholder="Nhập địa chỉ đầy đủ"></textarea>
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Thông tin tài khoản -->
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-key"></i> Thông tin tài khoản
                        </h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">
                                        Email <span class="required">*</span>
                                    </label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="email@company.com" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MatKhau" class="form-label">
                                        Mật khẩu <span class="required">*</span>
                                    </label>
                                    <input asp-for="MatKhau" class="form-control" type="password" placeholder="Tối thiểu 6 ký tự" required>
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="VaiTro" class="form-label">
                                Vai trò <span class="required">*</span>
                            </label>
                            <select asp-for="VaiTro" class="form-select" required>
                                <option value="">-- Chọn vai trò --</option>
                                <option value="Staff">Staff (Nhân viên)</option>
                                <option value="Admin">Admin (Quản trị viên)</option>
                            </select>
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Thông tin công việc -->
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-briefcase"></i> Thông tin công việc
                        </h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NgayVaoLam" class="form-label">
                                        Ngày vào làm
                                    </label>
                                    <input asp-for="NgayVaoLam" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                    <span asp-validation-for="NgayVaoLam" class="text-danger"></span>
                                    <small class="form-text text-muted">Để trống sẽ tự động là ngày hôm nay</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MucLuong" class="form-label">
                                        Mức lương (VNĐ)
                                    </label>
                                    <input asp-for="MucLuong" class="form-control" type="number" min="0" placeholder="Ví dụ: 10000000">
                                    <span asp-validation-for="MucLuong" class="text-danger"></span>
                                    <small class="form-text text-muted">Có thể thiết lập sau</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-custom me-2">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-success btn-custom">
                                <i class="bi bi-save"></i> Lưu nhân viên
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="info-card">
                <h6 class="text-primary">
                    <i class="bi bi-info-circle"></i> Hướng dẫn
                </h6>
                <ul class="small mb-0">
                    <li><strong>Họ tên:</strong> Bắt buộc, tên hiển thị của nhân viên</li>
                    <li><strong>Email:</strong> Bắt buộc, dùng để đăng nhập</li>
                    <li><strong>Mật khẩu:</strong> Tối thiểu 6 ký tự</li>
                    <li><strong>Vai trò:</strong> 
                        <ul class="mt-1">
                            <li><span class="badge bg-danger">Admin</span> - Toàn quyền</li>
                            <li><span class="badge bg-primary">Staff</span> - Nhân viên</li>
                        </ul>
                    </li>
                    <li><strong>Ngày vào làm:</strong> Tự động là hôm nay nếu không chọn</li>
                    <li><strong>Mức lương:</strong> Có thể thiết lập sau</li>
                </ul>
            </div>

            <div class="info-card mt-3">
                <h6 class="text-warning">
                    <i class="bi bi-exclamation-triangle"></i> Lưu ý
                </h6>
                <ul class="small mb-0">
                    <li>Email phải duy nhất trong hệ thống</li>
                    <li>Nhân viên sẽ được kích hoạt tự động</li>
                    <li>Có thể cập nhật thông tin sau khi tạo</li>
                    <li>Mật khẩu sẽ được mã hóa tự động</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Auto format salary input
        document.getElementById('MucLuong').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value) {
                e.target.value = parseInt(value).toLocaleString('vi-VN');
            }
        });

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const errorContainer = document.querySelector('.alert-danger');
            
            form.addEventListener('submit', function(e) {
                const email = document.getElementById('Email').value;
                const password = document.getElementById('MatKhau').value;
                const role = document.getElementById('VaiTro').value;
                
                let errors = [];
                
                if (!email) errors.push('Email là bắt buộc');
                if (!password || password.length < 6) errors.push('Mật khẩu phải có ít nhất 6 ký tự');
                if (!role) errors.push('Vui lòng chọn vai trò');
                
                if (errors.length > 0) {
                    e.preventDefault();
                    errorContainer.innerHTML = '<ul class="mb-0">' + 
                        errors.map(error => '<li>' + error + '</li>').join('') + 
                        '</ul>';
                    errorContainer.style.display = 'block';
                    window.scrollTo(0, 0);
                } else {
                    errorContainer.style.display = 'none';
                }
            });
        });
    </script>
} 