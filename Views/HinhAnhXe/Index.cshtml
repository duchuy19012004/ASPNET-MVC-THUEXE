@model IEnumerable<bike.Models.HinhAnhXe>

@{
    ViewData["Title"] = "Quản lý hình ảnh xe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-images"></i> Quản lý hình ảnh xe
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Lọc theo xe:</label>
                            <form method="get" class="d-flex">
                                <select name="maXe" class="form-select me-2" onchange="this.form.submit()">
                                    <option value="">-- Tất cả xe --</option>
                                    @foreach (var xe in ViewBag.XeList as SelectList)
                                    {
                                        <option value="@xe.Value" selected="@(xe.Selected)">@xe.Text</option>
                                    }
                                </select>
                            </form>
                        </div>
                        <div class="col-md-8 text-end">
                            <a asp-action="Create" asp-route-maXe="@ViewBag.MaXeSelected" class="btn btn-success">
                                <i class="fas fa-plus"></i> Thêm hình ảnh
                            </a>
                        </div>
                    </div>

                    <!-- Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count()</h5>
                                    <p class="mb-0">Tổng số hình ảnh</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count(h => h.LaAnhChinh)</h5>
                                    <p class="mb-0">Ảnh chính</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.GroupBy(h => h.MaXe).Count()</h5>
                                    <p class="mb-0">Xe có hình ảnh</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5>@(Model.Any() ? Model.GroupBy(h => h.MaXe).Average(g => g.Count()).ToString("F1") : "0")</h5>
                                    <p class="mb-0">Trung bình ảnh/xe</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Image Gallery -->
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var group in Model.GroupBy(h => h.Xe))
                            {
                                <div class="col-md-12 mb-4">
                                    <div class="card">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">
                                                <i class="fas fa-motorcycle"></i> @group.Key.TenXe
                                                <span class="badge bg-info ms-2">@group.Count() ảnh</span>
                                            </h5>
                                            <a asp-action="Create" asp-route-maXe="@group.Key.MaXe" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-plus"></i> Thêm ảnh
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                @foreach (var hinh in group.OrderBy(h => h.ThuTu))
                                                {
                                                    <div class="col-md-3 col-sm-4 col-6 mb-3">
                                                        <div class="card image-card position-relative">
                                                            @if (hinh.LaAnhChinh)
                                                            {
                                                                <span class="badge bg-success position-absolute" style="top: 10px; left: 10px; z-index: 10;">
                                                                    <i class="fas fa-star"></i> Ảnh chính
                                                                </span>
                                                            }
                                                            <img src="/images/xe/@hinh.TenFile" alt="@hinh.MoTa" class="card-img-top" style="height: 150px; object-fit: cover;">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">@(hinh.MoTa ?? "Không có mô tả")</h6>
                                                                <p class="card-text mb-2">
                                                                    <small class="text-muted">
                                                                        Thứ tự: @hinh.ThuTu | 
                                                                        @hinh.NgayThem.ToString("dd/MM/yyyy")
                                                                    </small>
                                                                </p>
                                                                <div class="btn-group w-100" role="group">
                                                                    @if (!hinh.LaAnhChinh)
                                                                    {
                                                                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="setMainImage(@hinh.MaHinhAnh)">
                                                                            <i class="fas fa-star"></i>
                                                                        </button>
                                                                    }
                                                                    <a asp-action="Edit" asp-route-id="@hinh.MaHinhAnh" class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <a asp-action="Delete" asp-route-id="@hinh.MaHinhAnh" class="btn btn-sm btn-outline-danger">
                                                                        <i class="fas fa-trash"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            <h5>Chưa có hình ảnh nào</h5>
                            <p>Bấm nút "Thêm hình ảnh" để thêm hình ảnh cho xe.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm hình ảnh đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set main image function
        function setMainImage(id) {
            if (confirm('Bạn có chắc muốn đặt làm ảnh chính không?')) {
                $.ajax({
                    url: '@Url.Action("SetMainImage", "HinhAnhXe")',
                    type: 'POST',
                    data: { id: id },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Có lỗi xảy ra: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi thực hiện yêu cầu.');
                    }
                });
            }
        }
    </script>
}

<style>
    .image-card {
        transition: transform 0.2s;
    }
    
    .image-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .card-img-top {
        border-radius: 0.375rem 0.375rem 0 0;
    }
    
    .badge {
        font-size: 0.7rem;
    }
</style> 