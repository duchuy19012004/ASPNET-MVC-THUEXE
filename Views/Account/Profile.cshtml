@model bike.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Quản lý Profile";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-gear"></i> Quản lý thông tin cá nhân
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Hiển thị thông báo -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="NgayTao" type="hidden" />

                        <div class="row">
                            <!-- Thông tin cơ bản -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="bi bi-person"></i> Thông tin cơ bản
                                </h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Ten" class="form-label"></label>
                                    <input asp-for="Ten" class="form-control" placeholder="Nhập họ và tên">
                                    <span asp-validation-for="Ten" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SoDienThoai" class="form-label"></label>
                                    <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại">
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Thông tin bổ sung -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="bi bi-geo-alt"></i> Thông tin bổ sung
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="DiaChi" class="form-label"></label>
                                    <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ đầy đủ"></textarea>
                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Ngày đăng ký</label>
                                    <input type="text" class="form-control" value="@Model.NgayTao.ToString("dd/MM/yyyy")" readonly>
                                    <small class="form-text text-muted">Ngày bạn tạo tài khoản</small>
                                </div>

                                <!-- Avatar section (tạm thời ẩn, có thể thêm sau) -->
                                <div class="mb-3" style="display: none;">
                                    <label asp-for="Avatar" class="form-label"></label>
                                    <input asp-for="Avatar" class="form-control" type="file" accept="image/*">
                                    <span asp-validation-for="Avatar" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-primary me-2">
                                            <i class="bi bi-save"></i> Cập nhật thông tin
                                        </button>
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                                            <i class="bi bi-arrow-left"></i> Quay lại
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-action="ChangePassword" class="btn btn-warning">
                                            <i class="bi bi-key"></i> Đổi mật khẩu
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 