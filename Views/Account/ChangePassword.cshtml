@model bike.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-key"></i> Đổi mật khẩu
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Hiển thị thông báo -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="MatKhauHienTai" class="form-label">
                                <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.MatKhauHienTai)
                            </label>
                            <input asp-for="MatKhauHienTai" class="form-control" type="password" placeholder="Nhập mật khẩu hiện tại">
                            <span asp-validation-for="MatKhauHienTai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhauMoi" class="form-label">
                                <i class="bi bi-key"></i> @Html.DisplayNameFor(m => m.MatKhauMoi)
                            </label>
                            <input asp-for="MatKhauMoi" class="form-control" type="password" placeholder="Nhập mật khẩu mới">
                            <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                            <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="XacNhanMatKhauMoi" class="form-label">
                                <i class="bi bi-key-fill"></i> @Html.DisplayNameFor(m => m.XacNhanMatKhauMoi)
                            </label>
                            <input asp-for="XacNhanMatKhauMoi" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới">
                            <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Lưu ý:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Mật khẩu phải có ít nhất 6 ký tự</li>
                                <li>Sau khi đổi mật khẩu, bạn sẽ cần đăng nhập lại</li>
                                <li>Hãy nhớ mật khẩu mới để có thể đăng nhập</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                            <div>
                                <button type="submit" class="btn btn-warning me-2">
                                    <i class="bi bi-key"></i> Đổi mật khẩu
                                </button>
                                <a asp-action="Profile" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Thêm card hướng dẫn -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-shield-check"></i> Bảo mật tài khoản
                    </h6>
                    <p class="card-text small text-muted">
                        Để bảo mật tài khoản tốt hơn, bạn nên:
                    </p>
                    <ul class="small text-muted">
                        <li>Sử dụng mật khẩu mạnh (có cả chữ, số và ký tự đặc biệt)</li>
                        <li>Không chia sẻ mật khẩu với người khác</li>
                        <li>Thay đổi mật khẩu định kỳ</li>
                        <li>Đăng xuất khi sử dụng máy tính công cộng</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hiển thị/ẩn mật khẩu
        $(document).ready(function() {
            // Thêm icon mắt để hiển thị/ẩn password (optional)
            $('.form-control[type="password"]').after('<i class="bi bi-eye toggle-password" style="margin-left: -30px; cursor: pointer; position: relative; z-index: 2;"></i>');
            
            $(document).on('click', '.toggle-password', function() {
                $(this).toggleClass("bi-eye bi-eye-slash");
                var input = $(this).prev('input');
                input.attr('type', input.attr('type') === 'password' ? 'text' : 'password');
            });
        });
    </script>
} 