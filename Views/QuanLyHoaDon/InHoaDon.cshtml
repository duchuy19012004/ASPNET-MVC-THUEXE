@model bike.Models.HoaDon
@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>H√≥a ƒë∆°n HD@(Model.MaHoaDon.ToString("D6"))</title>
    <style>
        /* Reset v√† base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', monospace;
            font-size: 12px;
            line-height: 1.3;
            color: #000;
            background: white;
            padding: 10px;
        }

        /* Container ch√≠nh - Bill format */
        .invoice-container {
            max-width: 80mm; /* Chi·ªÅu r·ªông bill 80mm */
            margin: 0 auto;
            background: white;
            border: 1px solid #ddd;
            font-family: 'Courier New', monospace; /* Font ƒë∆°n gi·∫£n cho bill */
            padding: 10px;
        }

        /* Bill styles */
        .bill-header {
            text-align: center;
            padding: 10px 0;
            border-bottom: 1px dashed #000;
            margin-bottom: 10px;
        }

        .bill-company {
            font-weight: bold;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .bill-contact {
            font-size: 10px;
        }

        .bill-title {
            text-align: center;
            font-weight: bold;
            font-size: 16px;
            margin: 10px 0;
        }

        .bill-info {
            margin-bottom: 10px;
        }

        .bill-line {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3px;
        }

        .bill-separator {
            border-top: 1px dashed #000;
            margin: 10px 0;
        }

        .bill-total {
            font-weight: bold;
            font-size: 14px;
            text-align: center;
            margin: 10px 0;
        }

        .bill-footer {
            text-align: center;
            font-size: 10px;
            margin-top: 15px;
            border-top: 1px dashed #000;
            padding-top: 10px;
        }

        /* Print styles */
        @@media print {
            body {
                padding: 0;
                font-size: 10px;
                margin: 0;
            }
            
            .invoice-container {
                border: none;
                box-shadow: none;
                margin: 0;
                padding: 5px;
                max-width: none;
                width: 80mm;
            }
            
            .no-print {
                display: none;
            }
            
            @@page {
                margin: 0.2in;
                size: 80mm auto; /* Bill size */
            }
        }

        /* N√∫t in */
        .print-btn {
            position: fixed;
            top: 10px;
            right: 10px;
            background: #333;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 12px;
            z-index: 1000;
        }

        .print-btn:hover {
            background: #555;
        }
    </style>
</head>
<body>
    <!-- N√∫t in -->
    <button class="print-btn no-print" onclick="window.print()">
        üñ®Ô∏è In Bill
    </button>

    <div class="invoice-container">
        <!-- Header -->
        <div class="bill-header">
            <div class="bill-company">CHO THUE XE MAY SAI GON</div>
            <div class="bill-contact">
                95/38 Nguyen Van Troi, P.12, Q.Phu Nhuan<br>
                Tel: 0908.630.065
            </div>
        </div>

        <!-- Title -->
        <div class="bill-title">HOA DON THANH TOAN</div>
        
        <!-- Bill Info -->
        <div class="bill-info">
            <div class="bill-line">
                <span>So HD:</span>
                <span>HD@(Model.MaHoaDon.ToString("D6"))</span>
            </div>
            <div class="bill-line">
                <span>Ngay:</span>
                <span>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</span>
            </div>           
        </div>

        <div class="bill-separator"></div>

        <!-- Customer Info -->
        <div class="bill-info">
            <div class="bill-line">
                <span>Khach hang:</span>
                <span>@Model.HopDong?.HoTenKhach</span>
            </div>
            <div class="bill-line">
                <span>SDT:</span>
                <span>@Model.HopDong?.SoDienThoai</span>
            </div>           
        </div>

        <div class="bill-separator"></div>

        <!-- Service Info -->
        <div class="bill-info">
            <div style="font-weight: bold; margin-bottom: 5px;">DICH VU THUE XE:</div>
            <div class="bill-line">
                <span>Xe:</span>
                <span>
                    @if (Model.HopDong?.ChiTietHopDong?.Any() == true)
                    {
                        var xeDau = Model.HopDong.ChiTietHopDong.First();
                        @xeDau.Xe?.TenXe
                        @if (Model.HopDong.ChiTietHopDong.Count > 1)
                        {
                            <text> (+@(Model.HopDong.ChiTietHopDong.Count - 1) xe)</text>
                        }
                    }
                    else
                    {
                        <text>Kh√¥ng c√≥ xe</text>
                    }
                </span>
            </div>           
            <div class="bill-line">
                <span>Ngay nhan:</span>
                <span>@Model.HopDong?.NgayNhanXe.ToString("dd/MM/yyyy")</span>
            </div>
            <div class="bill-line">
                <span>Ngay tra:</span>
                <span>@Model.HopDong?.NgayTraXeThucTe?.ToString("dd/MM/yyyy")</span>
            </div>
            <div class="bill-line">
                <span>So ngay:</span>
                <span>@Model.HopDong?.SoNgayThue ngay</span>
            </div>
            <div class="bill-line">
                <span>Gia/ngay:</span>
                <span>
                    @if (Model.HopDong?.ChiTietHopDong?.Any() == true)
                    {
                        var xeDau = Model.HopDong.ChiTietHopDong.First();
                        @xeDau.GiaThueNgay.ToString("N0")
                        <text>ƒë</text>
                        @if (Model.HopDong.ChiTietHopDong.Count > 1)
                        {
                            <text> (TB)</text>
                        }
                    }
                    else
                    {
                        <text>0ƒë</text>
                    }
                </span>
            </div>
        </div>

        <div class="bill-separator"></div>

        <!-- Total -->
        <div class="bill-total">
            TONG TIEN: @Model.SoTien.ToString("N0")ƒë<br>
            (@Model.TrangThai)<br>
            Ngay TT: @Model.NgayThanhToan.ToString("dd/MM/yyyy")
        </div>

        <!-- Note if exists -->
        @if (!string.IsNullOrEmpty(Model.GhiChu))
        {
            <div class="bill-separator"></div>
            <div style="font-size: 10px;">
                Ghi chu: @Model.GhiChu
            </div>
        }

        <!-- Footer -->
        <div class="bill-footer">
            CAM ON QUY KHACH!<br>
            Moi thac mac lien he: 0908.630.065
        </div>
    </div>

    <script>
        // Auto print khi load trang
        window.onload = function() {
            setTimeout(function() {
                window.print();
            }, 500);
        }

        // Close window after print
        window.onafterprint = function() {
            window.close();
        }
    </script>
</body>
</html> 