                            <div class="mb-3">
                                <label asp-for="VaiTro" class="form-label required">
                                    <i class="bi bi-person-badge"></i> Vai tr√≤
                                </label>
                                <select asp-for="VaiTro" asp-items="ViewBag.Roles" class="form-select">
                                    <option value="">-- Ch·ªçn vai tr√≤ --</option>
